[flake8]
ignore = E203, E266, E501, W503, F403, F401, F405
max-line-length = 100
max-complexity = 27
select = B,C,E,F,W,T4,B9
exclude =
    .git,
    .gitignore,
    .gitmodules,
    .github,
    .nox,
    .pytest_cache,
    __pycache__,
    docs/source/conf.py,
    venv,
count = True
show-source = True
statistics = True

